{
    "id": "togglebuttonhd",
    "name": "Toggle Button",
    "description": "Toggle button based on Homey devices",
    "author": "Jelger Haanstra (Phuturist)",
    "width": 150,
    "components": {
        "settings": "Settings"
    },
    "settings": [
        {
            "id": "name",
            "type": "string"
        },
        {
            "id": "room",
            "type": "boolean",
            "default": true
        },
        {
            "id": "icon",
            "type": "string",
            "default": "data:image/svg+xml;base64,"
        },
        {
            "id": "offcolor",
            "type": "string",
            "default": "#EEEEEE"
        },
        {
            "id": "oncolor",
            "type": "string",
            "default": "#009688"
        },
        {
            "id": "device",
            "type": "array",
            "default": []
        }
    ]
}
